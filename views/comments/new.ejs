<% include ../partials/header %>

    <div class="row">
        <div class="col-12 mt-4">
            <h1 style="text-align: center;">Add New Comment to <%= campground.name %></h1>
        </div>
        <div class="col-12 col-lg-4 mx-auto mt-4">
            <form action="/campgrounds/<%= campground._id %>/comments" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="comment[text]" placeholder="text">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-default btn-block btn-primary">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Go Back</a>
        </div>
    </div>
<% include ../partials/footer %>